@model Labb4_MVC.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h1>Customer Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
    </dl>
    @* lånade böcker *@
    <h4>Borrowed Books</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Borrowed
                </th>
                <th>
                    Customer
                </th>
                <th>
                    Returned
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Loans)
            {
                <tr>
                    <td>
                        @item.Book.Title
                    </td>
                    <td>
                        @item.LoanDate
                    </td>
                    <td>
                        @item.Customer.Name
                    </td>
                    <td>
                        @item.ReturnDate
                    </td>
                </tr>
            }
        </tbody>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
