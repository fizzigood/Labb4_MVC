@model Labb4_MVC.Models.Customer

@{
    ViewData["Title"] = "Customer Loans";
}

<h1>Customer Loans</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
    </dl>
</div>

<h2>Loans</h2>
<table class="table">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Loan Date</th>
            <th>Return Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model.Loans)
        {
            <tr>
                <td>@loan.Book.Title</td>
                <td>@loan.LoanDate.ToShortDateString()</td>
                <td>@loan.ReturnDate?.ToShortDateString() ?? "Not Returned"</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="LoanBook" asp-route-customerId="@Model.CustomerId">Loan a Book</a> |
    <a asp-action="Index">Back to List</a>
</div>
